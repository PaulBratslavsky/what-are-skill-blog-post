{
  "name": "restaurant",
  "displayName": "Restaurant",
  "description": "A complete restaurant website template with menu management, reservations, locations, and content pages. Includes menu items with dietary flags and allergen tracking, table reservations, multi-location support, and SEO-ready pages.",
  "contentTypes": {
    "menu-item": {
      "kind": "collectionType",
      "collectionName": "menu_items",
      "info": {
        "singularName": "menu-item",
        "pluralName": "menu-items",
        "displayName": "Menu Item",
        "description": "Menu items with pricing, dietary flags, allergens, and category assignment"
      },
      "options": {
        "draftAndPublish": true
      },
      "pluginOptions": {},
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "slug": {
          "type": "uid",
          "targetField": "name"
        },
        "description": {
          "type": "text",
          "maxLength": 500
        },
        "price": {
          "type": "decimal",
          "required": true
        },
        "image": {
          "type": "media",
          "multiple": false,
          "allowedTypes": ["images"]
        },
        "category": {
          "type": "relation",
          "relation": "manyToOne",
          "target": "api::menu-category.menu-category",
          "inversedBy": "items"
        },
        "allergens": {
          "type": "component",
          "component": "restaurant.allergen-tag",
          "repeatable": true
        },
        "isVegetarian": {
          "type": "boolean",
          "default": false
        },
        "isVegan": {
          "type": "boolean",
          "default": false
        },
        "isGlutenFree": {
          "type": "boolean",
          "default": false
        },
        "spiceLevel": {
          "type": "enumeration",
          "enum": ["mild", "medium", "hot", "extra-hot"]
        },
        "featured": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "menu-category": {
      "kind": "collectionType",
      "collectionName": "menu_categories",
      "info": {
        "singularName": "menu-category",
        "pluralName": "menu-categories",
        "displayName": "Menu Category",
        "description": "Categories for organizing menu items (e.g. appetizers, mains, desserts)"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "slug": {
          "type": "uid",
          "targetField": "name"
        },
        "description": {
          "type": "text"
        },
        "image": {
          "type": "media",
          "multiple": false,
          "allowedTypes": ["images"]
        },
        "order": {
          "type": "integer",
          "default": 0
        },
        "items": {
          "type": "relation",
          "relation": "oneToMany",
          "target": "api::menu-item.menu-item",
          "mappedBy": "category"
        }
      }
    },
    "reservation": {
      "kind": "collectionType",
      "collectionName": "reservations",
      "info": {
        "singularName": "reservation",
        "pluralName": "reservations",
        "displayName": "Reservation",
        "description": "Table reservations with guest details, party size, and status tracking"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "email": {
          "type": "email",
          "required": true
        },
        "phone": {
          "type": "string",
          "required": true
        },
        "date": {
          "type": "date",
          "required": true
        },
        "time": {
          "type": "string",
          "required": true
        },
        "partySize": {
          "type": "integer",
          "required": true,
          "min": 1,
          "max": 20
        },
        "specialRequests": {
          "type": "text"
        },
        "status": {
          "type": "enumeration",
          "enum": ["pending", "confirmed", "cancelled", "completed"],
          "default": "pending"
        }
      }
    },
    "location": {
      "kind": "collectionType",
      "collectionName": "locations",
      "info": {
        "singularName": "location",
        "pluralName": "locations",
        "displayName": "Location",
        "description": "Restaurant locations with address, contact info, and opening hours"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "name": {
          "type": "string",
          "required": true
        },
        "address": {
          "type": "text",
          "required": true
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "email"
        },
        "image": {
          "type": "media",
          "multiple": false,
          "allowedTypes": ["images"]
        },
        "mapUrl": {
          "type": "string"
        },
        "openingHours": {
          "type": "component",
          "component": "restaurant.opening-hours",
          "repeatable": true
        }
      }
    },
    "homepage": {
      "kind": "singleType",
      "collectionName": "homepages",
      "info": {
        "singularName": "homepage",
        "pluralName": "homepages",
        "displayName": "Homepage",
        "description": "The restaurant homepage with hero section and SEO"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "heroTitle": {
          "type": "string",
          "required": true
        },
        "heroSubtitle": {
          "type": "text"
        },
        "heroImage": {
          "type": "media",
          "multiple": false,
          "allowedTypes": ["images"]
        },
        "aboutSnippet": {
          "type": "text",
          "maxLength": 500
        },
        "seo": {
          "type": "component",
          "component": "shared.seo",
          "repeatable": false
        }
      }
    },
    "about": {
      "kind": "singleType",
      "collectionName": "abouts",
      "info": {
        "singularName": "about",
        "pluralName": "abouts",
        "displayName": "About",
        "description": "The about page with restaurant story and team members"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "title": {
          "type": "string",
          "required": true
        },
        "story": {
          "type": "richtext"
        },
        "teamMembers": {
          "type": "component",
          "component": "restaurant.team-member",
          "repeatable": true
        },
        "seo": {
          "type": "component",
          "component": "shared.seo",
          "repeatable": false
        }
      }
    },
    "global": {
      "kind": "singleType",
      "collectionName": "globals",
      "info": {
        "singularName": "global",
        "pluralName": "globals",
        "displayName": "Global",
        "description": "Global restaurant settings including name, description, logo, and social links"
      },
      "options": {
        "draftAndPublish": false
      },
      "pluginOptions": {},
      "attributes": {
        "restaurantName": {
          "type": "string",
          "required": true
        },
        "description": {
          "type": "text",
          "required": true
        },
        "logo": {
          "type": "media",
          "multiple": false,
          "allowedTypes": ["images"]
        },
        "defaultSeo": {
          "type": "component",
          "component": "shared.seo",
          "repeatable": false
        },
        "socialLinks": {
          "type": "component",
          "component": "shared.social-link",
          "repeatable": true
        }
      }
    }
  },
  "components": {
    "shared": {
      "seo": {
        "collectionName": "components_shared_seo",
        "info": {
          "displayName": "Seo",
          "icon": "search",
          "description": "SEO metadata for pages"
        },
        "options": {},
        "attributes": {
          "metaTitle": {
            "type": "string",
            "required": true
          },
          "metaDescription": {
            "type": "text",
            "required": true
          },
          "shareImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
          }
        }
      },
      "media": {
        "collectionName": "components_shared_media",
        "info": {
          "displayName": "Media",
          "icon": "photograph",
          "description": "A single media file (image, video, or document)"
        },
        "options": {},
        "attributes": {
          "file": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images", "files", "videos"]
          }
        }
      },
      "rich-text": {
        "collectionName": "components_shared_rich_texts",
        "info": {
          "displayName": "Rich text",
          "icon": "pencil-alt",
          "description": "A rich text block for long-form content"
        },
        "options": {},
        "attributes": {
          "body": {
            "type": "richtext"
          }
        }
      },
      "social-link": {
        "collectionName": "components_shared_social_links",
        "info": {
          "displayName": "Social Link",
          "icon": "link",
          "description": "A social media platform link"
        },
        "options": {},
        "attributes": {
          "platform": {
            "type": "enumeration",
            "enum": ["facebook", "instagram", "twitter", "yelp", "tripadvisor", "google"]
          },
          "url": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    "restaurant": {
      "allergen-tag": {
        "collectionName": "components_restaurant_allergen_tags",
        "info": {
          "displayName": "Allergen Tag",
          "icon": "exclamation-triangle",
          "description": "A food allergen label"
        },
        "options": {},
        "attributes": {
          "name": {
            "type": "string",
            "required": true
          }
        }
      },
      "opening-hours": {
        "collectionName": "components_restaurant_opening_hours",
        "info": {
          "displayName": "Opening Hours",
          "icon": "clock",
          "description": "Daily opening and closing times for a location"
        },
        "options": {},
        "attributes": {
          "day": {
            "type": "enumeration",
            "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"],
            "required": true
          },
          "openTime": {
            "type": "string",
            "required": true
          },
          "closeTime": {
            "type": "string",
            "required": true
          },
          "isClosed": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "team-member": {
        "collectionName": "components_restaurant_team_members",
        "info": {
          "displayName": "Team Member",
          "icon": "user",
          "description": "A restaurant team member with name, role, and bio"
        },
        "options": {},
        "attributes": {
          "name": {
            "type": "string",
            "required": true
          },
          "role": {
            "type": "string"
          },
          "bio": {
            "type": "text"
          },
          "photo": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
          }
        }
      }
    }
  },
  "middlewares": {
    "menu-item": {
      "populate": {
        "image": {
          "fields": ["name", "alternativeText", "url", "formats"]
        },
        "category": {
          "fields": ["name", "slug"]
        },
        "allergens": {
          "populate": "*"
        }
      }
    },
    "menu-category": {
      "populate": {
        "image": {
          "fields": ["name", "alternativeText", "url", "formats"]
        },
        "items": {
          "fields": ["name", "slug", "price", "description", "isVegetarian", "isVegan", "isGlutenFree", "spiceLevel", "featured"]
        }
      }
    },
    "location": {
      "populate": {
        "image": {
          "fields": ["name", "alternativeText", "url", "formats"]
        },
        "openingHours": {
          "populate": "*"
        }
      }
    },
    "homepage": {
      "populate": {
        "heroImage": {
          "fields": ["name", "alternativeText", "url", "formats"]
        },
        "seo": {
          "populate": {
            "shareImage": {
              "fields": ["name", "alternativeText", "url", "formats"]
            }
          }
        }
      }
    },
    "about": {
      "populate": {
        "teamMembers": {
          "populate": {
            "photo": {
              "fields": ["name", "alternativeText", "url", "formats"]
            }
          }
        },
        "seo": {
          "populate": {
            "shareImage": {
              "fields": ["name", "alternativeText", "url", "formats"]
            }
          }
        }
      }
    },
    "global": {
      "populate": {
        "logo": {
          "fields": ["name", "alternativeText", "url"]
        },
        "defaultSeo": {
          "populate": {
            "shareImage": {
              "fields": ["name", "alternativeText", "url", "formats"]
            }
          }
        },
        "socialLinks": {
          "populate": "*"
        }
      }
    }
  },
